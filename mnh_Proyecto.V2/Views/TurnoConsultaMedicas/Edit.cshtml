@model mnh_Proyecto.V2.Models.TurnoConsultaMedica

@{
    ViewData["Title"] = "Edit";
}

<section class="py-0 text-white">
    <div class="container py-4 bg-success bg-gradient">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1>Consultas Médicas</h1>
                <p class="lead mb-0"><i>Sistema de gestión administrativa</i></p>
            </div>
        </div>
    </div>
</section>
<br />


<h4>Editar turno Consulta Médica</h4>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMedico" class="control-label"></label>
                <input asp-for="IdMedico" class="form-control" />
                <span asp-validation-for="IdMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaConsultaMedica" class="control-label"></label>
                <input asp-for="FechaConsultaMedica" class="form-control" />
                <span asp-validation-for="FechaConsultaMedica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentoPaciente" class="control-label"></label>
                <input asp-for="DocumentoPaciente" class="form-control" />
                <span asp-validation-for="DocumentoPaciente" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <input asp-for="IdPaciente" class="form-control" />
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiasDisponibles" class="control-label"></label>
                <select asp-for="DiasDisponibles" class="form-control"></select>
                <span asp-validation-for="DiasDisponibles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorasDisponibles" class="control-label"></label>
                <select asp-for="HorasDisponibles" class="form-control"></select>
                <span asp-validation-for="HorasDisponibles" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
