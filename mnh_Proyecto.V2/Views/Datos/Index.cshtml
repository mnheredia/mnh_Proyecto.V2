<br />
<hr />


<div class="container">
    <div class="row">

        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="tarjeta">
                <div class="p-3 text-center">
                    <h1 class="text-gradient text-success" id="state3" countTo="4"> @ViewData["CantidadConsultas"]</h1>
                    <h5 class="mt-3">Cantidad de Consultas Médicas</h5>
                    @*<p class="text-sm font-weight-normal">Save 3-4 weeks of work when you use our pre-made pages for your website</p>*@
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="tarjeta">
                <div class="p-3 text-center">
                    <h1 class="text-gradient text-success" id="state3" countTo="4"> @ViewData["CantidadPrácticas"]</h1>
                    <h5 class="mt-3">Cantidad de Prácticas Médicas</h5>
                    @*<p class="text-sm font-weight-normal">Save 3-4 weeks of work when you use our pre-made pages for your website</p>*@
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="tarjeta">
                <div class="p-3 text-center">
                    <h1 class="text-gradient text-success" id="state3" countTo="4">@ViewData["CantidadPacientes"]</h1>
                    <h5 class="mt-3">Cantidad de Pacientes</h5>
                    @*<p class="text-sm font-weight-normal">Save 3-4 weeks of work when you use our pre-made pages for your website</p>*@
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="tarjeta">
                <div class="p-3 text-center">
                    <h1 class="text-gradient text-success" id="state3" countTo="4">@ViewData["CantidadMedicos"]</h1>
                    <h5 class="mt-3">Cantidad de Médicos</h5>
                    @*<p class="text-sm font-weight-normal">Save 3-4 weeks of work when you use our pre-made pages for your website</p>*@
                </div>
            </div>
        </div>
    </div>
</div>



<hr />

<br />
<br />
<table class="table table-hover table-bordered">
    <thead class="table-success">

        <tr>
            <th>
                <div class="p-3 text-center">
                    <h4>Cantidad de turnos gestionados por médico/a</h4>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tcmc in ViewBag.TurnosCompletos)
        {
            <tr>
                <td>
                    <div class="p-2 text-center">
                        @tcmc
                        <br />
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


